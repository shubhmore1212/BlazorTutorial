@page "/editemployee/{id}"
@page "/editemployee"

@inherits EditEmployeeBase

<EditForm Model="@EditEmployee" OnValidSubmit="HandleValidSubmit">
    @* <DataAnnotationsValidator/> *@
    <ObjectGraphDataAnnotationsValidator />
    <h3>@Page_Header</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row pt-2">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
            @bind-Value="EditEmployee.FirstName" />
            <ValidationMessage For="@(()=>EditEmployee.FirstName)" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
            @bind-Value="EditEmployee.LastName" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
            @bind-Value="EditEmployee.Email" />
            <ValidationMessage For="@(()=>EditEmployee.Email)" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="email" class="col-sm-2 col-form-label">
            Confirm Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
            @bind-Value="EditEmployee.ConfirmEmail" />
            <ValidationMessage For="@(()=>EditEmployee.ConfirmEmail)" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" class="form-control" placeholder="Department"
            @bind-Value="EditEmployee.DepartmentId">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                }
            </InputSelect>
            @*  <InputText id="department" class="form-control" placeholder="Department"
            @bind-Value="EditEmployee.Department.DepartmentName"/>
            <ValidationMessage For="@(()=>EditEmployee.Department.DepartmentName)" /> *@
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" class="form-control" placeholder="Gender"
            @bind-Value="EditEmployee.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row pt-2">
        <label for="dateofbirth" class="col-sm-2 col-form-label">
            Date Of Birth
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="EditEmployee.DateOfBirth" class="form-control" />
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-md-center gap-2">
        <button class="btn btn-primary my-5 " type="submit">Submit</button>
        @if (Employee.EmployeeId > 0)
        {
            <button class="btn btn-danger my-5 " type="button" @onclick="HandleDeleteEmployee">Delete</button>
        }
    </div>
</EditForm>


